<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ff3F51B5</item>
        <item name="colorPrimaryDark">@color/ff303F9F</item>
        <item name="colorAccent">@color/ffff4081</item>
        <item name="android:alertDialogTheme">@style/dialog</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--APP内弹框对话框的样式,需要将该style应用到 APP的主题样式-->
    <style name="dialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/layout_dialog_theme_shape</item>
        <item name="android:colorBackground">@drawable/layout_dialog_theme_shape</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--toolbar左侧有预留空白，需要将该style应用到 APP的主题样式-->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--APP内网络请求菊花样式-->
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--APP内分割线样式-->
    <style name="Divider1dp">
        <item name="android:background">@color/ffe1e1e1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="Divider1dp_portrait">
        <item name="android:background">@color/ffe1e1e1</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
