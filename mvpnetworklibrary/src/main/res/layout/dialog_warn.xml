<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/layout_dialog_theme_shape"
              android:gravity="center_horizontal"
              android:minWidth="235dp"
              android:orientation="vertical">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="22dp"
        android:src="@drawable/dialog_warning"
        />

    <TextView
        android:id="@+id/tv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="14dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:gravity="center"
        android:textColor="@color/ff333333"
        />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginBottom="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="取消"
            android:background="@drawable/quxiao_btn_bg"
            android:textColor="#C70009"
            android:gravity="center"
            android:layout_marginRight="32dp"
            />


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:text="确定"
            android:background="@drawable/bt_2"
            android:textColor="#fff"
            />
    </LinearLayout>
</LinearLayout>