<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item
                >
                <shape>
                    <solid android:color="#50C00912"/>
                    <stroke android:color="#C00912"
                        android:width="1dp"/>

                    <corners
                        android:radius="18dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 获得焦点状态 -->
    <item android:state_focused="true">
        <layer-list>
            <item
                >
                <shape>
                    <solid android:color="#50C00912"/>

                    <stroke android:color="#C00912"
                        android:width="1dp"/>
                    <corners
                        android:radius="18dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 正常状态 -->
    <item>
        <layer-list>

            <item
                >

                <shape>
                    <solid android:color="#fff"></solid>

                    <stroke android:color="#C00912"
                        android:width="1dp"/>

                    <corners
                        android:radius="18dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
